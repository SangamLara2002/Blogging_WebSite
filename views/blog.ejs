<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width= , initial-scale=1.0">
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container ">
    <h1><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" alt="coverImage" width="30%" height="409rem">
    <p><%= blog.body %></p>
</div>
<div class="container mt-3">
    <img src="/<%= blog.createdBy.profileImageURL %>" alt="profileImage" width="50px">
    <%= blog.createdBy.fullName %>
</div>
<div class="container mt-3">
    <h2>Comments(<%= allComments.length %>)</h2>
    <% if (locals.user) { %>
        
        <form action="/blog/comment/<%= blog._id %>" method="POST">
          
            <div class="mb-3">
              
              <input type="text" 
                    class="form-control" 
                    placeholder="Enter your comment"
                    aria-describedby="emailHelp" 
                    name="content"/>
             </div> 
             <button type="submit" class="btn btn-primary">Add</button>
             </form>
    <% } %>
    <div class="mt-3">
        <% allComments.forEach(comment => { %>
            <div class="card mt-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8"> <!-- Content on the left -->
                            <p class="comment-content">
                                <%= comment.content %>
                            </p>
                        </div>
                        <div class="col-md-4 text-right "> <!-- Image and full name on the right -->
                            <div class="comment-details ms-5">
                                
                                <img src="/<%= comment.createdBy.profileImageURL %>" alt="profileImage" width="40px" />
                                <%= comment.createdBy.fullName %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        <% }) %>
    </div>
</div>
<div class="mt-3"></div>
    <%- include('./partials/script') %>
</body>
</html>